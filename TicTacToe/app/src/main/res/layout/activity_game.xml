<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    android:columnCount="3"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".GameActivity">

    <ImageButton
        android:id="@+id/cell00"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:background="@color/spaceBackground"
        android:scaleType="fitCenter"
        android:tag="00"/>

    <ImageButton
        android:id="@+id/cell01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:background="@color/spaceBackground"
        android:scaleType="fitCenter"
        android:tag="01"/>

    <ImageButton
        android:id="@+id/cell02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:background="@color/spaceBackground"
        android:scaleType="fitCenter"
        android:tag="02"/>

    <ImageButton
        android:id="@+id/cell10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:background="@color/spaceBackground"
        android:scaleType="fitCenter"
        android:tag="10"/>

    <ImageButton
        android:id="@+id/cell11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:background="@color/spaceBackground"
        android:scaleType="fitCenter"
        android:tag="11"/>

    <ImageButton
        android:id="@+id/cell12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:background="@color/spaceBackground"
        android:scaleType="fitCenter"
        android:tag="12"/>

    <ImageButton
        android:id="@+id/cell20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:background="@color/spaceBackground"
        android:scaleType="fitCenter"
        android:tag="20"/>

    <ImageButton
        android:id="@+id/cell21"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:background="@color/spaceBackground"
        android:scaleType="fitCenter"
        android:tag="21"/>

    <ImageButton
        android:id="@+id/cell22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:background="@color/spaceBackground"
        android:scaleType="fitCenter"
        android:tag="22"/>

    <ImageView
        android:id="@+id/currentPlayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:src="@drawable/player_one_icon"
        android:scaleType="fitCenter"/>


    <TextView
        android:id="@+id/statusMessage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:textSize="18sp"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:background="@color/actionButtions"
        android:text="@string/play_again" />

    <Button
        android:id="@+id/quit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:background="@color/actionButtions"
        android:text="@string/quit" />



</GridLayout>